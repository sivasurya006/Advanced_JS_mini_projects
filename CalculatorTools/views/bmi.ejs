<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title %></title>
</head>
<body>
    <%-include('./partials/header.ejs') %>
    <section class="form-section">
        <section>
            <div class="calculator-header">
                <h2>BMI Calculator</h2>
                <h4>Calculate your Body Mass Index</h4>
            </div>
            <section class="input-section">
                <form id="bmi-form">
                    <div>
                        <label for="height">Height (cm)</label>
                        <input type="number" id="heightIp" placeholder='170'>
                    </div>
                    <div>
                        <label for="weight">Weight (kg)</label>
                        <input type="number" id="weightIp" placeholder='70'>
                    </div>
                    <div class="custom-button" id="calculate">Calculate BMI</div>
                    <section class="message-container">
                        <p id="result"></p>
                    </section>
                </form>
                <section id="result-section" class="result-section hide">
                    <section class="bmi-score-section">
                        <p class="bmi-score-head">Your BMI is</p>
                        <p class="bmi-score" id="bmi-score">10000</p>
                    </section>
                    <section class="summary-section">
                        <p class="summary-headers">Summary</p>
                        <p class="summary-content" id="summary">summary here...</p>
                        <p class="summary-headers">Recommendation</p>
                        <p class="summary-content" id="recommendation">Recommendation here...</p>
                    </section>
                </section>
            </section>
        </section>
    </section>
    <%-include('./partials/footer.ejs') %>
</body>
<script src="/js/BmiScript.js"></script>
</html>